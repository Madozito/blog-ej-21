<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/styles.css" />
    <link rel="icon" type="image/x-icon" href="../img/favicon.ico" />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
      rel="stylesheet"
    />
    <%- include("partials/bootstrapcss") %>
    <title>Crear un nuevo</title>
  </head>
  <body>
    <%- include("partials/navbar") %> <%- include("partials/hero") %>
    <br />
    <form class="container" method="POST" action="/registro" id="form-user">
      <h2>Crear nuevo usuario</h2>
      <div class="mb-3">
        <label for="username" class="form-label">Nombre</label>
        <input type="text" class="form-control" name="username" id="title_input" />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input id="blog_content" name="password" type="password" class="form-control" />
      </div>

      <button type="submit" class="btn btn-primary">Registrarse</button>
    </form>

    <%- include("partials/footer")%> <%- include("partials/bootstrapjs") %>
    <script src="js/app.js"></script>
  </body>
</html>
