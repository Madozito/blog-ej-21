<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Articles</title>
    <%- include("partials/bootstrapcss") %>
    
   
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div class="container m-auto">
      
      <div class="d-flex justify-content-between m-3 align-items-center text-center">
        <h2>Articles</h2>
        <a href="/admin/nuevo"><button class="btn btn-success btn-sm">New</button></a>
        <a href="/logout"><button class="btn btn-success btn-sm">logout</button></a>
      </div>

      <table class="tble table-striped">
        <thead>
          <tr>
            <th scope="col-1">Id</th>
            <th scope="col-2">Title</th>
            <th scope="col-3">Content</th>
            <th scope="col-2">Image</th>
            <th scope="col-1">createdAt</th>
            <th scope="col-2">Author</th>
          </tr>
        </thead>
        <tbody>
          <% let counter = 0 %>
          <% for (const article of articles) { %>
          <tr <% if (counter %2 ===0){%> class= "grey-background" <%}; counter++; %> >

            <th scope="row"><%= article.id %></th>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <% if(article.image.startsWith("https")){%>
              <td><img src="<%=article.image %>"alt="Faker imagenes"></td>
            <%} else{%>
              <td><img src="img/<%=article.image %>" alt="Imagenes subidas" id="img-subida" style="
                max-height: 227px;"></td>
            <%}%>
            <td><%= article.createdAt %></td> 
            <td><%= article.author %></td>

            <td class="text-center">
              
    <div class="d-grid gap-2 col-1">
              <a href="/admin/editar/<%= article.id %>" id="btn-send" class=" btn btn-primary" type="button">Edit</a>
              <a href="/admin/eliminar/<%= article.id %>" id="btn-send" class="btn btn-primary" type="button">Delete</a>
    </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <%- include("partials/footer") %>
 

    <%- include("partials/bootstrapjs") %>


  </body>
</html>
